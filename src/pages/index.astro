---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Wannes - Software Engineer";
const description = "Building things on the web.";
---

<BaseLayout title={title} description={description}>
    <main class="flex-1 flex items-center justify-center px-6 py-12 relative overflow-hidden">
        <!-- Background gradient blur -->
        <div class="absolute inset-0 -z-10">
            <div class="absolute top-0 left-1/4 w-96 h-96 bg-blue-400/20 dark:bg-blue-500/10 rounded-full blur-3xl"></div>
            <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-400/20 dark:bg-purple-500/10 rounded-full blur-3xl"></div>
        </div>

        <div class="max-w-4xl w-full">
            <!-- Hero Section -->
            <div class="space-y-8">
                <!-- Name with gradient -->
                <h1 class="text-7xl md:text-9xl font-black tracking-tight bg-gradient-to-br from-blue-500 via-blue-600 to-purple-600 dark:from-blue-400 dark:via-blue-500 dark:to-purple-500 bg-clip-text text-transparent animate-gradient drop-shadow-2xl" style="font-family: 'Montserrat', sans-serif; background-size: 200% 200%;">
                    Wannes
                </h1>

                <div class="space-y-4">
                    <!-- Role with accent -->
                    <p class="text-2xl md:text-3xl font-bold text-gray-800 dark:text-gray-200">
                        <span class="inline-block px-4 py-1 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-lg shadow-lg">
                            Software Engineer
                        </span>
                    </p>

                    <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 max-w-2xl leading-relaxed">
                        Building things on the web. Passionate about creating elegant solutions to complex problems.
                    </p>
                </div>

                <!-- Links with hover effects -->
                <div class="flex gap-4 pt-6 flex-wrap">
                    <a
                        href="/about"
                        class="group px-6 py-3 bg-gray-100 dark:bg-gray-900 hover:bg-gray-200 dark:hover:bg-gray-800 rounded-lg font-semibold transition-all hover:scale-105 hover:shadow-lg"
                    >
                        <span class="bg-gradient-to-r from-blue-600 to-blue-500 dark:from-blue-400 dark:to-blue-300 bg-clip-text text-transparent">About</span>
                    </a>
                    <a
                        href="/blog"
                        class="group px-6 py-3 bg-gray-100 dark:bg-gray-900 hover:bg-gray-200 dark:hover:bg-gray-800 rounded-lg font-semibold transition-all hover:scale-105 hover:shadow-lg"
                    >
                        <span class="bg-gradient-to-r from-purple-600 to-purple-500 dark:from-purple-400 dark:to-purple-300 bg-clip-text text-transparent">Blog</span>
                    </a>
                    <a
                        href="https://github.com/dealloc"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group px-6 py-3 bg-gray-100 dark:bg-gray-900 hover:bg-gray-200 dark:hover:bg-gray-800 rounded-lg font-semibold transition-all hover:scale-105 hover:shadow-lg"
                    >
                        <span class="bg-gradient-to-r from-gray-700 to-gray-600 dark:from-gray-300 dark:to-gray-400 bg-clip-text text-transparent">GitHub</span>
                    </a>
                </div>
            </div>
        </div>
    </main>
</BaseLayout>
